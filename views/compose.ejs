<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control form-control-lg" type="text" id="title" name="postTitle">
    </div>
    <div class="form-group">
        <label for="TextareaPost">Post</label>
        <textarea class="form-control" id="TextareaPost" rows="6" name="postBody"></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Publish</button>



</form>
<%- include("partials/footer"); -%>